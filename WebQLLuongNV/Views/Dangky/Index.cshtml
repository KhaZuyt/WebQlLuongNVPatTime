    <script>
        document.querySelectorAll('.update-checkbox').forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                const idDangKy = this.getAttribute('data-id'); // Lấy IdDangKy từ data-id
                const hoanThanh = this.checked; // Trạng thái checkbox

                console.log(`IdDangKy: ${idDangKy}, HoanThanh: ${hoanThanh}`); // Log dữ liệu

                fetch('/Dangky/UpdateHoanThanh', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ idDangKy: parseInt(idDangKy), hoanThanh: hoanThanh })
                })
                    .then(response => response.json())
                    .then(data => {
                        alert(data.message);
                    })
                    .catch(error => {
                        console.error('Lỗi:', error);
                    });
            });
        });

    </script>


