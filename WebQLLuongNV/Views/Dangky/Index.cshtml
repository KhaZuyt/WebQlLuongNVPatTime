                                                                    <input type="checkbox" class="form-check-input update-checkbox"
                                                                           data-id="@item.IdDangKy"
                                                                    @(item.HoanThanh.GetValueOrDefault() ? "checked" : "")>
                                                                </td>
                                                                <td>@item.TenNhanVien</td>
                                                                <td>@item.ThoiGianDK?.ToString("dd/MM/yyyy HH:mm")</td>
                                                                <td>@item.TenLoaiCongViec</td>
                                                                <td>@item.GioBatDau?.ToString("hh\\:mm")</td>
                                                                <td>@item.GioKetThuc?.ToString("hh\\:mm")</td>
                                                                <td>@item.NoiLam</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
