                        <div class="container my-5">
                            <h5 class="mb-4">Danh sách cá nhân đã đăng ký</h5>

                            @if (Model != null && Model.Any())
                            {
                                var groupedData = Model.GroupBy(x => new { x.MaLichLam, x.ThuNgayThangNam });

                                foreach (var group in groupedData)
                                {
                                    <div class="card mb-4">
                                        <div class="card-header bg-primary text-white  small-text">
                                            <h5 class="mb-0">Mã Lịch Làm: @group.Key.MaLichLam</h5>
                                            <p class="mb-0">@group.Key.ThuNgayThangNam?.ToString("dddd, dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))</p>
                                        </div>
                                        <div class="card-body small-text">
                                            <!-- Bảng dành cho loại đăng ký PV -->
                                            <h5 class="text-success mb-3 small-text">Danh sách đăng ký phục vụ </h5>
                                            <div class="table-responsive">
                                                <table class="table table-bordered custom-table small-text text-center">
                                                    <thead>
                                                        <tr>
                                                            <th>Hoàn Thành</th>
                                                            <th>Tên Nhân Viên</th>
                                                            <th>Thời Gian Đăng Ký</th>
                                                            <th>Tên Ca</th>
                                                            <th>Nơi Làm Việc</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in group.Where(x => x.LoaiDangKy == "PV"))
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <input type="checkbox" class="form-check-input update-checkbox"
                                                                           data-id="@item.IdDangKy"
                                                                    @(item.HoanThanh.GetValueOrDefault() ? "checked" : "")>
                                                                </td>
                                                                <td>@item.TenNhanVien</td>
                                                                <td>@item.ThoiGianDK?.ToString("dd/MM/yyyy HH:mm")</td>
                                                                <td>@item.TenCa</td> <!-- Cột Tên Ca -->
                                                                <td>@item.NoiLam</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                            <!-- Bảng dành cho loại đăng ký CVK -->
                                            <h5 class="text-danger mb-3 small-text">Danh sách đăng ký công việc khác</h5>
                                            <div class="table-responsive">
                                                <table class="table table-bordered custom-table small-text text-center">
                                                    <thead>
                                                        <tr>
                                                            <th>Hoàn Thành</th>
                                                            <th>Tên Nhân Viên</th>
                                                            <th>Thời Gian Đăng Ký</th>
                                                            <th>Tên Loại Công Việc</th>
                                                            <th>Giờ Bắt Đầu</th>
                                                            <th>Giờ Kết Thúc</th>
                                                            <th>Nơi Làm Việc</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in group.Where(x => x.LoaiDangKy == "CVK"))
