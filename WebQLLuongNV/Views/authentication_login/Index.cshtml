<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập - Quản lý lương</title>
    <link rel="shortcut icon" type="image/png" href="~/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <!-- Logo -->
                                <a href="~/Home" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img style="border-radius:10%" src="~/assets/images/logos/logoTrangchu.webp" width="80" height="80" alt="Logo">
                                </a>

                                <p class="text-center">Trang Web quản lý lương</p>

                                <!-- Form Đăng nhập -->
                                <form method="post" asp-action="login" asp-controller="authentication_login">
                                    <div class="mb-3">
                                        <label for="TenTaiKhoan" class="form-label">Tên đăng nhập</label>
                                        <input type="text" class="form-control" id="TenTaiKhoan" name="TenTaiKhoan" placeholder="Nhập tên đăng nhập" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="MatKhau" class="form-label">Mật khẩu</label>
                                        <input type="password" class="form-control" id="MatKhau" name="MatKhau" placeholder="Nhập mật khẩu" required>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input primary" type="checkbox" value="" id="RememberMe">
                                            <label class="form-check-label text-dark" for="RememberMe">
                                                Nhớ tài khoản
                                            </label>
                                        </div>
                                        <a class="text-primary fw-bold" href="~/lienHe">Quên mật khẩu? | Liên hệ Admin</a>
                                    </div>

                                    <!-- Nút Đăng nhập -->
                                    <button type="submit" class="btn btn-primary w-100 fs-4 mb-4 rounded-2">Đăng nhập</button>

                                    <!-- Thông báo lỗi -->
                                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        <div class="alert alert-danger text-center">
                                            @ViewBag.ErrorMessage
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
