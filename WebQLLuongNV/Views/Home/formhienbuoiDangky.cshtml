          <script>
            window.onload = function () {
                // Lấy danh sách đã đăng ký từ server
                $.ajax({
                    url: '@Url.Action("GetDanhSachDaDangKy", "Home")',
                    type: 'GET',
                    success: function (response) {
                        if (response.success) {
                            const danhSachDangKy = response.data;

                            // Cập nhật nút Đký
                            document.querySelectorAll('[id^="btnDangKy-"]').forEach(function (btn) {
                                const ids = btn.id.split("-");
                                const idChiTietLichLam = parseInt(ids[1]);
                                const idChiTietCaLamViec = parseInt(ids[2]);

                                if (danhSachDangKy.some(dk => dk.IdchitietLichLam === idChiTietLichLam && dk.LoaiDangKy === "PV")) {
                                    btn.innerText = "Hủy";
                                    btn.className = "btn btn-danger btn-sm";
                                    btn.setAttribute("onclick", `huydky(${idChiTietLichLam}, ${idChiTietCaLamViec})`);
                                    disableOtherButtons(idChiTietLichLam);
                                }
                            });

                            // Cập nhật nút Đký CVK
                            document.querySelectorAll('[id^="btnDangKyCVK-"]').forEach(function (btn) {
                                const idChitietLichLam = parseInt(btn.id.split("-")[1]);

                                if (danhSachDangKy.some(dk => dk.IdchitietLichLam === idChitietLichLam && dk.LoaiDangKy === "CVK")) {
                                    btn.innerText = "Hủy CVK";
                                    btn.className = "btn btn-danger btn-sm";
                                    btn.setAttribute("onclick", `huydkyCVK(${idChitietLichLam})`);
                                }
                            });
                        } else {
                            console.error(response.message || "Không thể tải trạng thái từ server!");
                        }
                    },
                    error: function () {
                        console.error("Không thể kết nối đến server để tải trạng thái.");
                    }
                });
            };


               function disableOtherButtons(idChiTietLichLam) {
                   document.querySelectorAll(`[id^="btnDangKy-${idChiTietLichLam}-"]`).forEach(function (btn) {
                       if (btn.innerText === "Đký") {
                           btn.disabled = true;
                       }
                   });
               }

               function enableOtherButtons(idChiTietLichLam) {
                   document.querySelectorAll(`[id^="btnDangKy-${idChiTietLichLam}-"]`).forEach(function (btn) {
                       btn.disabled = false;
                   });
               }
               function dangky(idChiTietLichLam, idChiTietCaLamViec) {
                   const btn = document.getElementById(`btnDangKy-${idChiTietLichLam}-${idChiTietCaLamViec}`);
                   btn.disabled = true;

                   $.ajax({
                       url: '@Url.Action("DangKy", "Home")',
                       type: 'POST',
                       data: { idChiTietLichLam, idChiTietCaLamViec },
                       success: function (response) {
                           if (response.success) {
                               alert("Đăng ký thành công!");

                               btn.innerText = "Hủy";
                               btn.className = "btn btn-danger btn-sm";
                               btn.setAttribute("onclick", `huydky(${idChiTietLichLam}, ${idChiTietCaLamViec})`);
                               btn.disabled = false;

                               updateSoNguoiLam(idChiTietLichLam, 1);
                               disableOtherButtons(idChiTietLichLam);
                           } else {
                               alert(response.message || "Không thể đăng ký!");
                               btn.disabled = false;
                           }
                       },
                       error: function () {
                           alert("Không thể kết nối đến server!");
                           btn.disabled = false;
                       }
                   });
               }

               function huydky(idChiTietLichLam, idChiTietCaLamViec) {
                   const btn = document.getElementById(`btnDangKy-${idChiTietLichLam}-${idChiTietCaLamViec}`);
                   btn.disabled = true;

                   $.ajax({
                       url: '@Url.Action("HuyDangKy", "Home")',
                       type: 'POST',
                       data: { idChiTietLichLam },
                       success: function (response) {
                           if (response.success) {
                               alert("Hủy đăng ký thành công!");

                               btn.innerText = "Đký";
                               btn.className = "btn btn-success btn-sm";
                               btn.setAttribute("onclick", `dangky(${idChiTietLichLam}, ${idChiTietCaLamViec})`);
                               btn.disabled = false;

                               updateSoNguoiLam(idChiTietLichLam, -1);
                               enableOtherButtons(idChiTietLichLam);
                           } else {
                               alert(response.message || "Không thể hủy đăng ký!");
                               btn.disabled = false;
                           }
                       },
                       error: function () {
                           alert("Không thể kết nối đến server!");
                           btn.disabled = false;
                       }
                   });
               }
               function dangkyCVK(idChiTietLichLam) {
                   const btn = document.getElementById(`btnDangKyCVK-${idChiTietLichLam}`);
                   btn.disabled = true;

                   $.ajax({
                       url: '@Url.Action("DangKyCVK", "Home")',
                       type: 'POST',
                       data: { idChiTietLichLam },
                       success: function (response) {
                           if (response.success) {
                               alert("Đăng ký CVK thành công!");

                               btn.innerText = "Hủy CVK";
                               btn.className = "btn btn-danger btn-sm";
                               btn.setAttribute("onclick", `huydkyCVK(${idChiTietLichLam})`);
                               btn.disabled = false;

                               // Cập nhật trạng thái vào localStorage
                               localStorage.setItem(`dangkyCVK-${idChiTietLichLam}`, "true");

                               updateSoNguoiLamCVK(idChiTietLichLam, 1);
                           } else {
                               alert(response.message || "Không thể đăng ký CVK!");
                               btn.disabled = false;
                           }
                       },
                       error: function () {
                           alert("Không thể kết nối đến server!");
                           btn.disabled = false;
                       }
                   });
               }

               function huydkyCVK(idChiTietLichLam) {
                   const btn = document.getElementById(`btnDangKyCVK-${idChiTietLichLam}`);
                   btn.disabled = true;

                   $.ajax({
                       url: '@Url.Action("HuyDangKyCVK", "Home")',
                       type: 'POST',
                       data: { idChiTietLichLam },
                       success: function (response) {
                           if (response.success) {
                               alert("Hủy CVK thành công!");

                               btn.innerText = "Đký CVK";
                               btn.className = "btn btn-success btn-sm";
                               btn.setAttribute("onclick", `dangkyCVK(${idChiTietLichLam})`);
                               btn.disabled = false;

                               // Xóa trạng thái khỏi localStorage
                               localStorage.removeItem(`dangkyCVK-${idChiTietLichLam}`);

                               updateSoNguoiLamCVK(idChiTietLichLam, -1);
                           } else {
                               alert(response.message || "Không thể hủy CVK!");
                               btn.disabled = false;
                           }
                       },
                       error: function () {
                           alert("Không thể kết nối đến server!");
                           btn.disabled = false;
                       }
                   });
               }


               function updateSoNguoiLam(idChiTietLichLam, increment) {
                   const element = document.getElementById(`soNguoiLam-${idChiTietLichLam}`);
                   if (element) {
                       const parts = element.innerText.split("/");
                       const currentCount = parseInt(parts[0].trim()) + increment;
                       const maxCount = parseInt(parts[1].trim());
                       element.innerText = `${currentCount} / ${maxCount} `;
                   }
               }

               function updateSoNguoiLamCVK(idChiTietLichLam, increment) {
                   const element = document.getElementById(`soNguoiLamCVK-${idChiTietLichLam}`);
                   if (element) {
                       const parts = element.innerText.split("/");
                       const currentCount = parseInt(parts[0].trim()) + increment;
                       const maxCount = parseInt(parts[1].trim());
                       element.innerText = `${currentCount} / ${maxCount}`;
                   }
               }

            function xacNhanDangKy() {
                const dangKyCLK = [];
                const dangKyCVK = [];

                // Duyệt qua các nút Đký
                document.querySelectorAll('[id^="btnDangKy-"]').forEach(function (btn) {
                    if (btn.innerText === "Hủy") {
                        const ids = btn.id.split("-");
                        dangKyCLK.push(parseInt(ids[1])); // Lấy idChiTietLichLam
                    }
                });

                // Duyệt qua các nút Đký CVK
                document.querySelectorAll('[id^="btnDangKyCVK-"]').forEach(function (btn) {
                    if (btn.innerText === "Hủy CVK") {
                        const idChitietLichLam = parseInt(btn.id.split("-")[1]);
                        dangKyCVK.push(idChitietLichLam);
                    }
                });

                // Gửi danh sách đăng ký lên server
                $.ajax({
                    url: '@Url.Action("XacNhanDangKy", "Home")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ dangKyCLK, dangKyCVK }),
                    success: function (response) {
                        if (response.success) {
                            alert(response.message || "Xác nhận đăng ký thành công!");
                        } else {
                            alert(response.message || "Không thể xác nhận đăng ký!");
                        }
                    },
                    error: function () {
                        alert("Không thể kết nối đến server!");
                    }
                });
            }


