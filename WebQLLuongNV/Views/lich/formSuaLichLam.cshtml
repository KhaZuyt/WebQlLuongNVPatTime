@model WebQLLuongNV.Models.LichLam;


<div class="container-fluid">
    <div class="card">
        <div class="card-body" style="margin-top:-40px">
            <div class="container my-4">
                <h5 class="mb-4 text-center text-sm-center" >Sửa Lịch Làm Việc</h5>
                <form asp-action="sualichlam" method="post" id="lichEditForm_@Model.MaLichLam">
                    <div class="row">
                        <!-- Cột 1 -->
                        <div class="alert alert-warning" role="alert">
                            Lưu ý : Nguyên tắc tạo mã là 'LL' + ngày tạo !
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="MaLichLam" class="control-label small">Mã Lịch Làm</label>
                                <input asp-for="MaLichLam" type="text" class="form-control form-control-sm" readonly="readonly" />
                                <span asp-validation-for="MaLichLam" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="MaQuanLy" class="control-label small">Mã Lịch Làm</label>
                                <input asp-for="MaQuanLy" type="text" class="form-control form-control-sm" readonly="readonly" />
                                <span asp-validation-for="MaQuanLy" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Cột 1 -->
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="ThuNgayThangNam" class="control-label small">Ngày Tháng Năm</label>
                                <input asp-for="ThuNgayThangNam" class="form-control form-control-sm" type="date" />
                                <span asp-validation-for="ThuNgayThangNam" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Cột 2 -->
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label asp-for="SoCaQuyDinh" class="control-label small">Số Ca Quy Định</label>
                                <input asp-for="SoCaQuyDinh" type="number" class="form-control form-control-sm" />
                                <span asp-validation-for="SoCaQuyDinh" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary" onclick="submitEditForm('lichEditForm_@Model.MaLichLam', 'editFormContainer_@Model.MaLichLam')">Cập Nhật</button>
                    </div>
                </form>
           </div>
        </div>
    </div>
</div>





