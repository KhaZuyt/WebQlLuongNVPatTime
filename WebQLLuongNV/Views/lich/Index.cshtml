    <script>

        function confirmDelete(maLichLam) {
            // Hiển thị hộp thoại xác nhận
            if (confirm("Bạn có chắc chắn muốn xóa lịch làm này không? Nó sẽ xóa tất cả các buổi trong lịch .")) {
                // Nếu người dùng chọn 'Có', chuyển hướng tới phương thức xóa
                window.location.href = `/Lich/Delete/${maLichLam}`;
            } else {
                // Nếu người dùng chọn 'Không', không làm gì
                console.log("Hủy xóa lịch làm");
            }
        }
        function xemchitietForm() {
            const xhttp = new XMLHttpRequest();
            xhttp.onload = function () {
                if (document.getElementById("formContainer").style.display === "none") {
                    // Hiển thị form nếu chưa được hiển thị
                    document.getElementById("formContainer").innerHTML = xhttp.responseText;
                    document.getElementById("formContainer").style.display = "block";
                } else {
                    // Ẩn form nếu đang hiển thị
                    document.getElementById("formContainer").style.display = "none";
                }
            }
            const url = "/Lich/formTaoLichLam"; // Đường dẫn tới action trả về form tạo lịch làm
            // Gửi yêu cầu tới server để lấy form
            xhttp.open("GET", url);
            xhttp.send();
        }
        document.getElementById("lichForm").onsubmit = function (event) {
            event.preventDefault(); // Ngăn chặn form submit thông thường

            const formData = new FormData(document.getElementById("lichForm"));
            const xhttp = new XMLHttpRequest();
            xhttp.onload = function () {
                if (xhttp.status == 200) {
                    // Xử lý phản hồi từ server, ví dụ: hiển thị thông báo thành công
                    alert("Lịch làm đã được lưu!");
                    document.getElementById("formContainer").style.display = "none"; // Ẩn form sau khi lưu
                } else {
                    // Xử lý lỗi, ví dụ: hiển thị thông báo lỗi
                    alert("Có lỗi xảy ra, vui lòng thử lại.");
                }
            };

            xhttp.open("POST", "/Lich/taolichlam", true);
            xhttp.send(formData);
        };

        // Hàm để mở form sửa
        function xemchitietEditForm(id) {
            const xhttp = new XMLHttpRequest();
            xhttp.onload = function () {
                const containerId = "editFormContainer_" + id;
                const container = document.getElementById(containerId);

                if (container.style.display === "none") {
                    // Hiển thị form nếu chưa được hiển thị
                    container.innerHTML = xhttp.responseText;
                    container.style.display = "block";
                } else {
                    // Ẩn form nếu đang hiển thị
                    container.style.display = "none";
                }
            };
            const url = "/lich/formSuaLichLam?id=" + id; // Đường dẫn tới action trả về form sửa lịch làm
            // Gửi yêu cầu tới server để lấy form
            xhttp.open("GET", url);
            xhttp.send();
        }

        // Xử lý việc submit form sửa lịch làm
        function submitEditForm(formId, containerId) {
            document.getElementById(formId).onsubmit = function (event) {
                event.preventDefault(); // Ngăn chặn form submit thông thường

                const formData = new FormData(document.getElementById(formId));
                const xhttp = new XMLHttpRequest();
                xhttp.onload = function () {
                    if (xhttp.status == 200) {
                        // Xử lý phản hồi từ server, ví dụ: hiển thị thông báo thành công
                        alert("Lịch làm đã được cập nhật!");
                        document.getElementById(containerId).style.display = "none"; // Ẩn form sau khi lưu
                        location.reload();
                    } else {
                        // Xử lý lỗi, ví dụ: hiển thị thông báo lỗi
                        alert("Có lỗi xảy ra, vui lòng thử lại.");
                    }
                };

                xhttp.open("POST", "/lich/sualichlam", true);
                xhttp.send(formData);
            };
        }

   



