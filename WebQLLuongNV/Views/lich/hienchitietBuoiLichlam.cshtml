      <script>
            function confirmDelete(IdChitietLichLam) {
            // Hiển thị hộp thoại xác nhận
            if (confirm("Bạn có chắc chắn muốn xóa buổi lịch làm này không? Nó sẽ xóa tất cả các ca trong buổi .")) {
            // Nếu người dùng chọn 'Có', chuyển hướng tới phương thức xóa
                    window.location.href = `/lich/xoabuoichitietlam/${IdChitietLichLam}`;
            } else {
            // Nếu người dùng chọn 'Không', không làm gì
            console.log("Hủy xóa lịch làm");
            }
            }
