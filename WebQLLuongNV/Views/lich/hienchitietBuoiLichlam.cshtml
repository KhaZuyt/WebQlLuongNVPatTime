                                <h5 class="card-title fw-semibold mb-4">Danh sách các buổi của từng lịch</h5>
                                @if (Model != null && Model.Any()) {
                                <table class="table table-bordered text-center mt-3 small-text">
                                    <thead>
                                        <tr>
                                         
                                            <th>Mã Lịch Làm</th>
                                            <th>Số ca làm</th>
                                                <th>Nơi Làm</th>
                                           
                                            <th>Giờ Bắt Đầu</th>
                                            <th>Giờ Kết Thúc</th>
                                            <th>Lương Loại Công Việc</th>
                                                <th>Số Ca CVK</th>
                                            <th>Tổng Số Ca Quy Định</th>
                                            <th>Tên Công Việc</th>
                                            <th>Số Người Làm</th>
                                         
                                                <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                           
                                                <td>@item.MaLichLam</td>
                                                    <td>
                                                        <table class="table table-sm small-text">
                                                            <thead>
                                                                <tr>

                                                                    <th>Tên Ca</th>
                                                                    <th>Số Lượng</th>
                                                                    <th>
                                                                        <a href="@Url.Action("formchitietcalamviec", "Lich", new { id = item.IdChitietLichLam })"
                                                                           class="btn btn-primary btn-sm">Thêm</a>
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @if (item.ChiTietCaLamViecs != null && item.ChiTietCaLamViecs.Any())
                                                                {
                                                                    @foreach (var ca in item.ChiTietCaLamViecs)
                                                                    {
                                                                        <tr>
                                                                            <td>@ca.IdcaLamViecNavigation?.TenCa</td>
                                                                            <td>@ca.SoLuong</td>
                                                                            <td>
                                                                                <form asp-action="xoacalamviec" method="post" style="display:inline;">
                                                                                    <input type="hidden" name="id" value="@ca.Id" />
                                                                                    <input type="hidden" name="idChiTietLichLam" value="@item.IdChitietLichLam" />
                                                                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                                                                </form>
                                                                            </td>
                                                                        </tr>
                                                                    }

                                                                }
                                                                else
                                                                {
                                                                    <tr>
                                                                        <td colspan="3">Không có dữ liệu</td>
                                                                    </tr>
                                                                }
                                                            </tbody>

                                                        </table>
                                                    </td>
                                                    <td>@item.NoiLam</td>
                                            
                                                <td>@item.GioBd?.ToString(@"hh\:mm")</td> 
                                                <td>@item.GioKt?.ToString(@"hh\:mm")</td> 
                                                <td>@item.LuongLoaiCv</td>
                                                    <td>@item.SoCaCvk</td>
                                                <td>@item.TongSoCaQuyDinh</td>
                                                    <td> @if (loaiCongViecs != null)
                                                        {
                                                            var loaiCongViec = loaiCongViecs.FirstOrDefault(l => l.Value == item.MaLoaiCongViec)?.Text;
                                                            @loaiCongViec
                                                        } </td>
                                                <td>@item.Songuoilam</td>
                                               <td>
                                                        <button type="button" onclick="confirmDelete('@item.IdChitietLichLam')" class="btn btn-alert btn-sm">Xóa buổi</button>
