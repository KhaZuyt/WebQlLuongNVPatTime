            <div class="container-fluid">
                <h3>Danh sách bảng lương của nhân viên</h3>
                <div class="card">
                    <div class="card-body">
                        <div class="container mt-3">
                            
                            <!-- Hiển thị thông báo nếu không có dữ liệu -->
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            else
                            {
                                <!-- Accordion cho danh sách bảng lương -->
                                <div class="accordion" id="salaryAccordion">
                                    @foreach (var item in Model)
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading_@item.MaLichLam">
                                                <button class="accordion-button small-accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@item.MaLichLam" aria-expanded="false" aria-controls="collapse_@item.MaLichLam">
                                                    <!-- Thông tin tóm tắt -->
                                                    <div class="d-flex justify-content-between w-100 text-truncate small-text">
                                                        <span><strong>Mã Lịch:</strong> @item.MaLichLam</span>
                                                        <span><strong>Ngày:</strong> @item.ThuNgayThangNam?.ToString("dd/MM/yyyy")</span>
                                                       <span><strong>Tổng Lương Chung:</strong> <span style="color:red;">@item.TongLuongChung</span> VND</span>
                                                      <span><strong>Tổng Lương PV:</strong> <span style="color:green;">@item.TongLuongPV</span> VND</span>
                                                        <span><strong>Tổng Lương CVK:</strong> <span style="color:blue;">@item.TongLuongCVK</span> VND</span>
                                                    </div>
                                                </button>
                                            </h2>
                                            <div class="mb-3">
           
                            </div>
                                            <div id="collapse_@item.MaLichLam" class="accordion-collapse collapse" aria-labelledby="heading_@item.MaLichLam" data-bs-parent="#salaryAccordion">
                                                <div class="accordion-body">
                                                    <!-- Bảng chi tiết -->
                                                    <div class="mb-3">
                                                        <form method="get" action="/luong/NhanVien">
                                                            <button class="btn btn-primary btn-lg">
                                                                <i class="bi bi-eye"></i> Hiển thị lương mỗi nhân viên
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered text-center small-table">
                                                            <thead>
                                                                <tr>
                                                                    <th class="small-text">Tên Nhân Viên</th>
                                                                    <th class="small-text">Mã Nhân Viên</th>
                                                                    <th class="small-text">Mã Lịch</th>
                                                                  
                                                                    <th class="small-text">Mức Lương</th>
                                                                    <th class="small-text">Thời Gian Đăng Ký</th>
                                                                    <th class="small-text">Loại Đăng Ký</th>
                                                                  
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var chiTiet in item.ChiTiet)
                                                                {
                                                                    <tr>
                                                                        <td class="small-text">@chiTiet.TenNhanVien</td>
                                                                        <td class="small-text">@chiTiet.MaNhanVien</td>
                                                                        <td class="small-text">@chiTiet.MaLichLam</td>

                                                                        <td class="small-text">
                                                                            @if (chiTiet.LoaiDangKy == "PV")
                                                                            {
                                                                                <span style="color:green;">
                                                                                    @if (chiTiet.MucLuong > 0)
                                                                                    {
                                                                                        @String.Format("{0:n0} VND", chiTiet.MucLuong)
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                       <span style="color:red">Chưa hoàn thành </span>
                                                                                    }
                                                                                                                            
                                                                                </span>
                                                                            }
                                                                            else if (chiTiet.LoaiDangKy == "CVK")
                                                                            {
                                                                                <span style="color:blue;">
                                                                                    @if (chiTiet.MucLuong > 0)
                                                                                    {
                                                                                        @String.Format("{0:n0} VND", chiTiet.MucLuong)
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span style="color:red">Chưa hoàn thành </span>
                                                                                    }                                       
                                                                                </span>
                                                                            }
                                                                            else
                                                                            {
                                                                                @if (chiTiet.MucLuong > 0)
                                                                                {
                                                                                    @String.Format("{0:n0} VND", chiTiet.MucLuong)
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span style="color:red">Chưa hoàn thành </span>
                                                                                                                    }
                                                                            }
                                                                        </td>

                                                                        <td class="small-text">@chiTiet.ThoiGianDky?.ToString("dd/MM/yyyy HH:mm")</td>
                                                                        <td class="small-text">
                                                                            @if (chiTiet.LoaiDangKy == "PV")
                                                                            {
                                                                                <span style="color:green;">Phục vụ </span>
                                                                            }
                                                                            else if (chiTiet.LoaiDangKy == "CVK")
                                                                            {
                                                                                <span style="color:blue;">Công Việc Khác</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                @chiTiet.LoaiDangKy
                                                                            }
                                                                        </td>
                                                                       
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
