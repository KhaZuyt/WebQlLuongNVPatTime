       <script>
            function loadDetails(maNhanVien) {
                var row = $("#row-" + maNhanVien); // Dòng nhân viên tương ứng
                var detailsRow = $("#details-" + maNhanVien); // Dòng chi tiết tương ứng

                // Nếu dòng chi tiết đã được mở, thì đóng lại
                if (detailsRow.is(":visible")) {
                    detailsRow.hide();
                } else {
                    // Mở dòng chi tiết và thực hiện Ajax để lấy thông tin chi tiết
                    detailsRow.show();

                    // Gửi yêu cầu Ajax
                    $.ajax({
                        url: '@Url.Action("chitietnhanvien", "danhSachNhanVien")', // URL của Action
                        type: 'GET',
                        data: { id: maNhanVien },
                        success: function (data) {
                            // Khi nhận được dữ liệu, hiển thị trong phần chi tiết
                            $('#details-container-' + maNhanVien).html(data);
                        },
                        error: function () {
                            alert("Có lỗi khi tải thông tin chi tiết.");
                        }
                    });
                }
            }
       </script>
       

