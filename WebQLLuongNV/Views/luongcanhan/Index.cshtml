            <div class="container-fluid">
                <div class="container my-5">
                    <!-- Hiển thị thông báo --> @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success"> @TempData["SuccessMessage"] </div>
                    } @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger"> @TempData["ErrorMessage"] </div>
                    }
                    @if (Model != null && Model.Any())
                    {
                        foreach (var group in Model)
                        {
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">Mã Lịch Làm: @group.MaLichLam</h5>
                                    <p class="mb-0">Ngày: @group.ThuNgayThangNam?.ToString("dddd, dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))</p>
                                </div>
                                <div class="card-body">
                                    <!-- Tổng lương từng loại -->
                                    <div class="container mt-4">
                                        <div class="row">
                                            <!-- Tổng lương PV -->
                                            <div class="col-md-4 mb-3">
                                                <div class="card border-success shadow-sm">
                                                    <div class="card-body text-center p-2">
                                                        <h6 class="card-title text-success fw-bold small-text">Tổng lương phục vụ</h6>
                                                        <h5 class="text-success fw-bold">
                                                            <i class="ti ti-arrow-up-left me-2"></i>@String.Format("{0:n0} VND", group.TongLuongPV)
                                                        </h5>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Tổng lương CVK -->
                                            <div class="col-md-4 mb-3">
                                                <div class="card border-danger shadow-sm">
                                                    <div class="card-body text-center p-2">
                                                        <h6 class="card-title text-danger fw-bold small-text">Tổng lương công việc khác</h6>
                                                        <h5 class="text-danger fw-bold">
                                                            <i class="ti ti-arrow-down-right me-2"></i>@String.Format("{0:n0} VND", group.TongLuongCVK)
                                                        </h5>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Tổng lương tổng -->
                                            <div class="col-md-4 mb-3">
                                                <div class="card border-primary shadow-sm">
                                                    <div class="card-body text-center p-2">
                                                        <h6 class="card-title text-primary fw-bold small-text">Tổng lương chung</h6>
                                                        <h5 class="text-primary fw-bold">
                                                            <i class="ti ti-currency-dollar me-2"></i>@String.Format("{0:n0} VND", group.TongLuongChung)
                                                        </h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Danh sách phục vụ -->
                                    <h5 class="text-success mt-3">Danh sách đăng ký phục vụ</h5>
                                    <div class="table-responsive">
                                        <table class="table table-bordered custom-table">
                                            <thead>
                                                <tr>
                                                    <th class="small-text">Tên Nhân Viên</th>
                                                    <th class="small-text">Tên Ca</th>
                                                    <th class="small-text">Thời Gian Ca</th>
                                                    <th class="small-text">Thời Gian Đăng Ký</th>
                                                    <th class="small-text">Mức Lương (VND)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in group.ChiTiet.Where(x => x.LoaiDangKy == "PV"))
                                                {
                                                    <tr>
                                                        <td class="small-text">@item.TenNhanVien</td>
                                                        <td class="small-text">@item.TenCa</td>
                                                        <td class="small-text">@item.ThoiGian?.ToString("hh\\:mm")</td>
                                                        <td class="small-text">@item.ThoiGianDky?.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td class="small-text">@String.Format("{0:n0} VND", item.MucLuong)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Danh sách công việc khác -->
                                    <h5 class="text-danger mt-3">Danh sách đăng ký công việc khác</h5>
                                    <div class="table-responsive">
                                        <table class="table table-bordered custom-table">
                                            <thead>
                                                <tr>
                                                    <th class="small-text">Tên Nhân Viên</th>
                                                    <th class="small-text">Tên Loại Công Việc</th>
                                                    <th class="small-text">Giờ Bắt Đầu</th>
                                                    <th class="small-text">Giờ Kết Thúc</th>
                                                    <th class="small-text">Thời Gian Đăng Ký</th>
                                                    <th class="small-text">Mức Lương (VND)</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in group.ChiTiet.Where(x => x.LoaiDangKy == "CVK"))
                                                {
                                                    <tr>
                                                        <td class="small-text">@item.TenNhanVien</td>
                                                        <td class="small-text">@item.TenLoaiCongViec</td>
                                                        <td class="small-text">@item.GioBatDau?.ToString("hh\\:mm")</td>
                                                        <td class="small-text">@item.GioKetThuc?.ToString("hh\\:mm")</td>
                                                        <td class="small-text">@item.ThoiGianDky?.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td class="small-text">@String.Format("{0:n0} VND", item.MucLuong)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <form asp-action="GuiVeAdmin" method="post"> 
                                        <input type="hidden" name="maNhanVien" value="@group.ChiTiet.FirstOrDefault()?.MaNhanVien" />
                                        <input type="hidden" name="tongLuongChung" value="@group.TongLuongChung" /> 
                                         <input type="hidden" name="MaLichLam" value="@group.MaLichLam" /> 
                                        
                                        <div class="text-center mt-3"> <button type="submit" class="btn btn-primary">Gửi bảng lương về Admin</button>
                                            </div> 
                                            </form>
                                </div>
                            </div>
                          
                        }
                    }
                    else
                    {
                        <p class="text-center">Không có dữ liệu lương để hiển thị!
                        </p>

                        <br />
                        <p class="text-center"><strong>Gợi ý :Hãy đánh dấu <span style="color:red">Hoàn thành</span> ở Danh sách đã đăng ký để xem lương của mình ! </strong></p>
                    }
                </div>


            </div>
